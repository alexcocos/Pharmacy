@page
@model Pharmacy.Pages.Fabricanti.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Fabricanti</h1>

<p>
    <a asp-page="Create">Adauga un fabricant nou</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fabricant[0].Nume)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fabricant[0].Adresa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Fabricant) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nume)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adresa)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
